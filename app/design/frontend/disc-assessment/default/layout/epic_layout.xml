<?xml version="1.0"?>
<layout>
	<epic translate="label">
		<label>Epic</label>		
		<reference name="left">
		    <block type="core/template" name="contactForm" form_action="/contacts/index/post" template="contacts/custom-form.phtml" />
		</reference>		
		<reference name="root">
			<action method="setTemplate">
				<template>page/1column-epic.phtml</template>
			</action>
			<action method="setIsHandle">
				<applied>
					1
				</applied>
			</action>			
		</reference>
		<reference name="right">
			<block type="customer/form_login" name="customer_form_login" template="customer/form/disc.login.phtml" />
		</reference>
		<reference name="head">
		     <action method="setTitle" translate="title">
		          <title>EPIC</title>
		     </action>
		</reference>			
	</epic>
</layout>